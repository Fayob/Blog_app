<% if @post.errors.any? %>
  <h2>The following errors prevent the post from being updated</h2>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li> <%= msg %></li>
    <% end %>
  </ul> 
<% end %>

<%= form_with model: @post, url: "/users/#{@user.id}/posts/#{@post.id}/update" do |form| %>
  <p>
    <%= form.label :title %> <br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :description%> <br>
    <%= form.text_area :text%>
  </p>

  <%= form.submit%>
<% end %>