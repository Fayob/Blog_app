<% if @post.errors.any? %>
  <h2>The following errors prevent the post from being saved</h2>
  <ul>
    <%@post.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_with scope: :post, url: "/users/#{@author.id}/posts/create", local: true do |form|%>
  <p>
    <%= form.label :title %> <br>
    <%= form.text_field :title%>
  </p>

  <p>
    <%= form.label :description%> <br>
    <%= form.text_area :text%>
  </p>

  <%= form.submit%>
<%end%>